<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    style="@style/cell">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_small"
        android:text="키즈밴드를 사용하고 있지 않아요."
        android:textColor="@color/colorText"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_connect_band"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dialog_button_height"
        android:layout_alignLeft="@+id/text_title"
        android:layout_alignRight="@+id/text_title"
        android:layout_below="@id/text_title"
        android:text="키즈 밴드 등록"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/button_large"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_small"/>

</RelativeLayout>