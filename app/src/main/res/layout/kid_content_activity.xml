<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/cell">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="활동량"
        android:textSize="@dimen/kid_info_name_text"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        android:layout_alignTop="@+id/linear_info"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/layout_graph"
        android:layout_alignBottom="@+id/layout_graph"
        android:layout_below="@+id/text_title"
        android:padding="@dimen/space_medium">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_kid_walk"
                android:layout_width="@dimen/space_small"
                android:layout_height="@dimen/space_small"
                android:background="@drawable/circle"
                android:layout_marginRight="@dimen/space_small"/>
            <TextView
                android:id="@+id/text_kid_walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="자녀 걸음 수 : "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_walk_goal"
                android:layout_width="@dimen/space_small"
                android:layout_height="@dimen/space_small"
                android:background="@drawable/circle"
                android:layout_marginRight="@dimen/space_small"/>
            <TextView
                android:id="@+id/text_walk_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="목표 걸음 수 : "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_kid_cal"
                android:layout_width="@dimen/space_small"
                android:layout_height="@dimen/space_small"
                android:background="@drawable/circle"
                android:layout_marginRight="@dimen/space_small"/>
            <TextView
                android:id="@+id/text_kid_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="소모 칼로리 : "/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:padding="@dimen/space_small">
        <com.hookedonplay.decoviewlib.DecoView
            android:id="@+id/graph_cal"
            android:layout_width="@dimen/kid_info_activity_graph_size"
            android:layout_height="@dimen/kid_info_activity_graph_size"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/text_percent_cal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kid_info_activity_graph_size"
            android:text="00%"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/colorText"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
    </RelativeLayout>

</RelativeLayout>