<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/cell">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="활동량"
        android:textSize="@dimen/kid_info_name_text"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        android:layout_alignTop="@+id/linear_info"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space_large"
        android:layout_marginBottom="@dimen/space_small">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/space_small">
            <com.hookedonplay.decoviewlib.DecoView
                android:id="@+id/graph_walk"
                android:layout_width="@dimen/kid_info_activity_graph_size"
                android:layout_height="@dimen/kid_info_activity_graph_size"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/text_percent_walk"
                android:layout_width="@dimen/kid_info_activity_graph_size"
                android:layout_height="@dimen/kid_info_activity_graph_size"
                android:text="00%"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/colorText"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/graph_walk"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="걸음수"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:layout_marginTop="@dimen/space_small"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/space_small">
            <com.hookedonplay.decoviewlib.DecoView
                android:id="@+id/graph_cal"
                android:layout_width="@dimen/kid_info_activity_graph_size"
                android:layout_height="@dimen/kid_info_activity_graph_size"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/text_percent_cal"
                android:layout_width="@dimen/kid_info_activity_graph_size"
                android:layout_height="@dimen/kid_info_activity_graph_size"
                android:text="00%"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/colorText"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/graph_cal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="칼로리"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:layout_marginTop="@dimen/space_small"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>