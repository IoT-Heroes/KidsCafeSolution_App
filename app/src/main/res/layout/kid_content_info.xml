<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:padding="@dimen/space_medium"
    android:layout_marginBottom="@dimen/space_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미정"
            android:textSize="@dimen/kid_info_name_text"
            android:textStyle="bold"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/text_band"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kid_info_band_height"
            android:text="밴드 착용"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="@dimen/kid_info_band_text"
            android:textStyle="bold"
            android:background="@drawable/label_band"
            android:paddingLeft="@dimen/space_small"
            android:paddingRight="@dimen/space_small"
            android:layout_marginLeft="@dimen/space_small"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/text_band"
        android:layout_marginLeft="@dimen/space_small"
        android:layout_marginRight="@dimen/space_small"
        android:layout_marginTop="@dimen/space_small">
        <TextView
            android:id="@+id/text_age"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5살"
            android:gravity="center"
            android:background="@drawable/circle"
            android:layout_marginRight="@dimen/space_small"/>
        <ImageView
            android:id="@+id/image_sex"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:background="@drawable/circle"
            android:src="@drawable/woman"
            android:layout_marginRight="@dimen/space_small"/>
        <TextView
            android:id="@+id/text_height"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="110cm"
            android:gravity="center"
            android:background="@drawable/circle"
            android:layout_marginRight="@dimen/space_small"/>
        <TextView
            android:id="@+id/text_weight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="30kg"
            android:gravity="center"
            android:background="@drawable/circle"/>
    </LinearLayout>


</LinearLayout>